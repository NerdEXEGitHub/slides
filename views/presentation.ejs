<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= presentation %></title>
    <style>
      body {
        margin: 0;
      }

      iframe {
        position: absolute;
        width: 100%;
        height: 100%;
        border: 0;
      }
    </style>
  </head>
  <body>
    <iframe src="/<%= presentation %>/0"></iframe>
    <script>
      let slideNumber = 0;

      onload = () => {
        (function ael() {
          this.document.addEventListener("keyup", (e) => {
            if (e.key == "ArrowLeft") {
              console.log("l");
              slideNumber--;
              document.querySelector(
                "iframe"
              ).src = `/${document.title}/${slideNumber}`;
              setTimeout(() => {
                ael.call(document.querySelector("iframe").contentWindow);
              }, 200);
            } else if (e.key == "ArrowRight") {
              console.log("r");
              slideNumber++;
              document.querySelector(
                "iframe"
              ).src = `/${document.title}/${slideNumber}`;
              setTimeout(() => {
                ael.call(document.querySelector("iframe").contentWindow);
              }, 200);
            } else {
              console.log(e.key);
            }
          });
        }.call(document.querySelector("iframe").contentWindow));
      };
    </script>
  </body>
</html>
